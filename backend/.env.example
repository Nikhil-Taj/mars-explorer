# Mars Explorer Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# NASA API Configuration
# Get your API key from: https://api.nasa.gov/
NASA_API_KEY=your_nasa_api_key_here
NASA_API_BASE_URL=https://api.nasa.gov

# Database Configuration
# For production, use MongoDB Atlas or another cloud provider
MONGODB_URI=mongodb://localhost:27017/nasa-space-explorer

# CORS Configuration
# For production, set this to your frontend domain
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600

# Production Environment Variables (for deployment)
# PORT=10000
# NODE_ENV=production
# NASA_API_KEY=your_production_nasa_api_key
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mars-explorer
